<Window x:Class="ProductShop.DeletedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductShop"
        mc:Ignorable="d"
        Title="DeletedWindow" Height="200" Width="550">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Вы действительно хотите удалить продукт?" FontSize="20" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"/>
        <Button x:Name="btn_OK" Content="Да" Grid.Column="1" Grid.Row="2" FontSize="20" HorizontalAlignment="Left" Click="btn_OK_Click" Width="130" Height="30" VerticalAlignment="Bottom"/>
        <Button x:Name="btn_No" Content="Нет" Grid.Column="1" Grid.Row="2" FontSize="20" HorizontalAlignment="Right" Click="btn_No_Click" Width="130" Height="30" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
